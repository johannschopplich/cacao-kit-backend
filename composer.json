{
  "require": {
    "getkirby/cms": "^4",
    "getkirby/kql": "dev-v4-compat",
    "johannschopplich/kirby-helpers": "^4.2",
    "johannschopplich/kirby-headless": "^2.2"
  },
  "repositories": [
    {
      "url": "https://github.com/johannschopplich/kql-fork.git",
      "type": "git"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 -t public vendor/getkirby/cms/router.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "extra": {
    "kirby-cms-path": false
  }
}
